<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All top picks
    </h1>

    <a href="/top_picks/new" class="btn btn-block btn-outline-secondary">
      Add a new top pick
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "top_pick_templates/top_picks_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Venue
        </th>

        <th>
          Dish
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @top_picks.each do |top_pick| %>
      <tr>
        <td>
          <%= top_pick.id %>
        </td>

        <td>
          <% if top_pick.venue.present? %>
            <a href="/venues/<%= top_pick.venue.id %>">
              <%= top_pick.venue.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if top_pick.dish.present? %>
            <a href="/dishes/<%= top_pick.dish.id %>">
              <%= top_pick.dish.cuisine_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if top_pick.user.present? %>
            <a href="/users/<%= top_pick.user.id %>">
              <%= top_pick.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(top_pick.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(top_pick.updated_at) %> ago
        </td>

        <td>
          <a href="/top_picks/<%= top_pick.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @top_picks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
