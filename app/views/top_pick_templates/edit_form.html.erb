<h1>
  Edit top pick #<%= @top_pick.id %>
</h1>

<hr>

<form action="/update_top_pick/<%= @top_pick.id %>" method="post">

  <div class="form-group">
    <label for="venue_id">
      Venue
    </label>

    <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name, @top_pick.venue_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :cuisine_id, @top_pick.dish_id), :class => "form-control") %>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update top pick
  </button>
</form>

<hr>

<a href="/top_picks">
  Go back
</a>
