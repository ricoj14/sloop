<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Top pick #<%= @top_pick.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/top_picks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @top_pick.user %>
          <a href="/top_picks/<%= @top_pick.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit top_pick
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @top_pick.user %>
          <a href="/delete_top_pick/<%= @top_pick.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete top_pick
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Venue
      </dt>
      <dd>
        <% if @top_pick.venue.present? %>
          <a href="/venues/<%= @top_pick.venue_id %>">
            <%= @top_pick.venue.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Dish
      </dt>
      <dd>
        <% if @top_pick.dish.present? %>
          <a href="/dishes/<%= @top_pick.dish_id %>">
            <%= @top_pick.dish.cuisine_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @top_pick.user.present? %>
          <a href="/users/<%= @top_pick.user_id %>">
            <%= @top_pick.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@top_pick.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@top_pick.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

