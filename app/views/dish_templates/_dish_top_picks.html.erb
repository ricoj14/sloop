<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Top Picks

    <a data-toggle="collapse" href="#dish_top_picks_new_form">
      Add top pick
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.top_picks.each do |top_pick| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/top_picks/<%= top_pick.id %>">
          <%= top_pick.venue_id %>
        </a>

        <%if current_user == top_pick.user %>
          <a href="/delete_top_pick_from_dish/<%= top_pick.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_top_picks_new_form">
        <%= render partial: "dish_templates/dish_top_picks_new_form" %>
      </div>
    </div>

  </ul>
</div>
